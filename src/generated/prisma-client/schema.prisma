// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma-client"
}

// ðŸ”¹ Define the enum for user type
enum UserType {
  business
  influencer
}

// ðŸ”¹ Update your model to use the enum
model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  password  String
  usertype  UserType
}
